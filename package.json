{
  "name": "six-cities",
  "version": "4.0.0",
  "description": "Проект «Шесть городов» от HTML Academy",
  "keywords": [
    "rest",
    "api",
    "node.js"
  ],
  "main": "main.js",
  "scripts": {
    "start": "npm run build && node ./dist/main.js",
    "build": "npm run clean && npm run compile",
    "lint": "eslint src/ --ext .ts",
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "ts": "ts-node",
    "cli": "npm run build && node ./dist/main.cli.js",
    "rest": "npm run build && node ./dist/main.rest.js | pino-pretty --colorize --translateTime SYS:standard",
    "mock:server": "json-server ./src/mocks/mock-server-data.json --port 3022"
  },
  "devDependencies": {
    "@types/convict": "6.1.6",
    "@types/convict-format-with-validator": "6.0.5",
    "@types/got": "^9.6.12",
    "@types/node": "18.16.3",
    "@typescript-eslint/eslint-plugin": "5.46.0",
    "@typescript-eslint/parser": "5.46.0",
    "eslint": "8.39.0",
    "eslint-config-htmlacademy": "9.1.1",
    "json-server": "^1.0.0-beta.3",
    "rimraf": "3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "type": "module",
  "engines": {
    "node": "^18.0.0",
    "npm": ">=8"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "chalk": "^4.1.2",
    "convict": "^6.2.4",
    "convict-format-with-validator": "6.2.0",
    "dayjs": "^1.11.18",
    "dotenv": "17.2.3",
    "inversify": "7.10.2",
    "mongoose": "8.19.1",
    "pino": "^10.1.0",
    "pino-pretty": "^9.4.1",
    "reflect-metadata": "0.2.2",
    "@typegoose/typegoose": "^12.20.0"
  }
}
